@model Modelo.SchoolUp.Custom.CmLogin

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutNaoLogado.cshtml";
}


<p class="invisible">
    @Html.Label("LblMensagem", (string)@ViewBag.LblMensagem)
</p>

<form asp-action="Login" class="">
    <div class="card col-md-4 col-xs-12 mx-auto">
        <div class="card-header bg-info text-white text-center">
            <b>Acesse sua conta</b>
        </div>
        <div class="card-body">
            <input id="HdnPaginaAnterior" type="hidden" name="HdnPaginaAnterior" value="@ViewBag.PaginaAnterior" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md-12 mb-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend">
                                <i class="fas fa-at text-info"></i>
                            </span>
                        </div>
                        <input asp-for="Login" class="form-control" placeholder="Digite seu email" aria-describedby="inputGroupPrepend" required="" autofocus="" aria-required="true" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12 mb-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend">
                                <i class="fas fa-lock text-info"></i>
                            </span>
                        </div>
                        <input asp-for="Senha" class="form-control" type="password" placeholder="Sua senha" required="" aria-required="true" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <input type="submit" value="Entrar" class="btn btn-info align-center col-md-12" />
            </div>
            <br/>
            <div class="form-row">
                <div class="mx-auto">
                    <a href="@Url.Action("PrimeiroAcesso")" formnovalidate="formnovalidate">
                        Primeiro acesso
                    </a>
                </div>
            </div>
            <div class="form-row">
                <div class="mx-auto">
                    <a href="@Url.Action("RecuperarSenha")" formnovalidate="formnovalidate">
                        Esqueci minha senha
                    </a>
                </div>
            </div>
            <span asp-validation-for="MensagemErro" class="text-danger"></span>
        </div>
    </div>            
</form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
